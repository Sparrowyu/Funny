<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="@dimen/dp200">

    <ImageView
        android:id="@+id/iv_empty_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp100"
        android:src="@drawable/load_data_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tip_empty"
        style="@style/StandardTextBlack"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center"
        android:textColor="@color/color_999999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_empty_content"
        tools:text="@string/by_string_empty" />

    <TextView
        android:id="@+id/tv_tip_bt"
        style="@style/MiddleTextBlack"
        android:layout_width="166dp"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shape_white_bg_gray_border_ccorner4"
        android:gravity="center"
        android:text="@string/select_image_or_video"
        android:textColor="@color/color_666666"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tip_empty" />

</androidx.constraintlayout.widget.ConstraintLayout>
