<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cy_plugin_dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cy_plugin_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cy_plugin_update"
                android:textColor="#080706"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="left"-->
            <!--android:text="@string/cy_plugin_update_dialog_contenttip"-->
            <!--android:textColor="@color/cy_plugin_dialog"-->
            <!--android:textSize="14sp" />-->

            <TextView
                android:id="@+id/cy_plugin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/cy_plugin_dialog"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right|bottom">

            <TextView
                android:id="@+id/cy_plugin_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/cy_plguin_dialog"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/cy_plugin_dialog"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cy_plugin_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cy_plguin_dialog"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/cy_plugin_update_dialog_ok"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/cy_plugin_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="17dp"
        android:background="@drawable/dialog_closebg"
        android:src="@drawable/closee" />
</RelativeLayout>