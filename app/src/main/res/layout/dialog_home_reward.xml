<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_common_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:src="@mipmap/gray_dialog_close" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp15"
            android:src="@mipmap/home_reward_empty_bg" />

        <TextView
            android:id="@+id/dialog_content"
            style="@style/Base333MiddleText"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp90"
            android:gravity="center"
            android:paddingBottom="@dimen/dp15"
            android:text="抱歉，该功能即将在未来开放"
            android:textStyle="bold" />

    </RelativeLayout>

</layout>