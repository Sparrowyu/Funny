<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        style="@style/RootLayout"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_update"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="检查更新" />

                <TextView
                    android:id="@+id/tv_version_code"
                    style="@style/my_edit_view_right_tx"
                    android:layout_marginRight="@dimen/dp36"
                    android:text="V1.0.1"
                    android:textColor="@color/color_999999" />

                <ImageView
                    style="@style/setting_view_right_return"
                    android:visibility="visible" />
            </RelativeLayout>

            <View style="@style/divider_view_line" />

            <RelativeLayout
                android:id="@+id/setting_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="清除缓存" />

                <TextView
                    android:id="@+id/tv_cache"
                    style="@style/my_edit_view_right_tx"
                    android:layout_marginRight="@dimen/dp36"
                    android:text="0MB"
                    android:textColor="@color/color_999999" />

                <ImageView
                    style="@style/setting_view_right_return"
                    android:visibility="visible" />
            </RelativeLayout>

            <View style="@style/divider_view_line" />

            <RelativeLayout
                android:id="@+id/setting_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                android:visibility="gone"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="绑定手机号" />

                <ImageView style="@style/setting_view_right_return" />
            </RelativeLayout>

            <View
                android:id="@+id/view_bind_phone"
                style="@style/divider_view_line"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/setting_policy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="用户协议" />

                <ImageView style="@style/setting_view_right_return" />
            </RelativeLayout>

            <View style="@style/divider_view_line" />

            <RelativeLayout
                android:id="@+id/setting_protocol"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="隐私政策" />

                <ImageView style="@style/setting_view_right_return" />
            </RelativeLayout>

            <View style="@style/divider_view_line" />

            <RelativeLayout
                android:id="@+id/setting_rec_manage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="管理个性化内容推荐" />

                <ImageView style="@style/setting_view_right_return" />
            </RelativeLayout>

            <View
                android:id="@+id/view_rec_manage"
                style="@style/divider_view_line" />

            <RelativeLayout
                android:id="@+id/setting_third_sdk"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="第三方SDK目录" />

                <ImageView style="@style/setting_view_right_return" />
            </RelativeLayout>

            <View style="@style/divider_view_line" />

            <RelativeLayout
                android:id="@+id/setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="意见反馈" />

                <ImageView style="@style/setting_view_right_return" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_cancellation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:foreground="?android:selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <View style="@style/divider_view_line" />

                <TextView
                    style="@style/setting_view_tx"
                    android:text="注销账户" />

                <ImageView style="@style/setting_view_right_return" />
            </RelativeLayout>

            <View style="@style/divider_view_line" />

            <RelativeLayout
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:foreground="?android:selectableItemBackground"
                android:visibility="visible"
                tools:ignore="UnusedAttribute">

                <TextView
                    style="@style/setting_view_tx"
                    android:text="星球居民ID" />

                <TextView
                    android:id="@+id/tv_id"
                    style="@style/my_edit_view_right_tx"
                    android:text=""
                    android:textColor="@color/color_333333" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_channel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:foreground="?android:selectableItemBackground"
                android:visibility="gone"
                tools:ignore="UnusedAttribute">

                <View style="@style/divider_view_line" />

                <TextView
                    style="@style/setting_view_tx"
                    android:text="渠道" />

                <TextView
                    android:id="@+id/tv_channel"
                    style="@style/my_edit_view_right_tx"
                    android:text=""
                    android:textColor="@color/color_333333" />

            </RelativeLayout>

            <View style="@style/divider_view_line" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_out_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp30"
            android:background="@drawable/click_no_gray_bt_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="退出登录"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/middle_text_size"
            android:visibility="gone" />

    </RelativeLayout>

</layout>
