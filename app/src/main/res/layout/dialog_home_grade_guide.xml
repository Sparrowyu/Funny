<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_common_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp16"
            android:visibility="visible">

            <TextView
                style="@style/LargeTextBlack"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="给我们评分"
                android:textStyle="bold" />

            <TextView
                style="@style/Base333MiddleText"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:gravity="center"
                android:text="喜欢我就给我个好评吧，我会继续努力做得更好！" />

            <View
                style="@style/divider_view_line"
                android:layout_marginTop="@dimen/dp10" />

            <TextView
                android:id="@+id/bt_cancel"
                style="@style/Base333MiddleText"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="@dimen/dp44"
                android:text="不了，谢谢" />

            <View style="@style/divider_view_line" />

            <TextView
                android:id="@+id/bt_criticize"
                style="@style/Base333MiddleText"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="@dimen/dp44"
                android:text="我要吐槽" />

            <View style="@style/divider_view_line" />

            <TextView
                android:id="@+id/bt_grade"
                style="@style/Base333MiddleText"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="@dimen/dp44"
                android:text="喜欢，给好评"
                android:textColor="@color/color_FF632E" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_content_criticize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp16"
            android:visibility="gone">

            <TextView
                style="@style/Base333MiddleText"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="我要吐槽"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/complete_chose_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:background="@drawable/shape_gray_bg_with_corner"
                android:minHeight="158dp">

                <EditText
                    android:id="@+id/et_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_gray_bg_with_corner"
                    android:gravity="start"
                    android:hint="请填写你的反馈意见，我会努力做的更好"
                    android:maxLength="120"
                    android:maxLines="10"
                    android:minHeight="@dimen/dp80"
                    android:padding="@dimen/dp10"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_d7d7d7"
                    android:textCursorDrawable="@drawable/edittext_cursor_normal"
                    android:textSize="15sp" />

            </RelativeLayout>

            <TextView
                style="@style/StandardTextBlack"
                android:layout_margin="@dimen/dp12"
                android:text="最多120个汉字"
                android:textColor="@color/color_d7d7d7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45">

                <View style="@style/divider_view_line" />

                <LinearLayout
                    android:id="@+id/dialog_choice_gender_dialog_ll"
                    android:layout_width="match_parent"
                    android:layout_height="44.5dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cancel"
                        style="@style/Base333MiddleText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?android:selectableItemBackground"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/color_999999"
                        android:textStyle="bold"
                        tools:ignore="UnusedAttribute" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_d7d7d7" />

                    <TextView
                        android:id="@+id/tv_sure"
                        style="@style/Base333MiddleText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foreground="?android:selectableItemBackground"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</layout>