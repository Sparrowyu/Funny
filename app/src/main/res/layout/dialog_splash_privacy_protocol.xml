<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:background="@drawable/shape_white_bg_with_corner"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp5"
            android:includeFontPadding="false"
            android:text="用户协议及隐私政策"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/middle_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/privacy_protocol_dialog_detail"
            style="@style/Base333StandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2.33dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/standard_text_size" />

        <TextView
            android:id="@+id/privacy_protocol_dialog_detail_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2.33dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/standard_text_size" />

        <TextView
            android:id="@+id/privacy_protocol_dialog_agree"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/click_can_orange_bt_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/privacy_protocol_dialog_disagree"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/click_no_gray_bt_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="不同意"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/middle_text_size" />


    </LinearLayout>

</layout>