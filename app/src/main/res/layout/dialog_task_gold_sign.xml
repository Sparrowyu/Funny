<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="@dimen/dp65"
            android:layout_marginRight="@dimen/dp10"
            android:background="@mipmap/invite_code_dialog_cancel"
            android:padding="@dimen/dp5"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="318dp"
                    android:layout_height="310dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/dialog_task_sgin_gold_bg"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/LargeTextWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-135dp"
                    android:includeFontPadding="false"
                    android:text="领取成功"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gold"
                    style="@style/LargeTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:includeFontPadding="false"
                    android:text="+30星币"
                    android:textColor="@color/color_FE7337" />

                <TextView
                    android:id="@+id/dialog_double_sure"
                    android:layout_width="190dp"
                    android:layout_height="@dimen/dp44"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/task_sure_bt"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="看视频奖励翻倍"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/dialog_sure"
                    android:layout_width="190dp"
                    android:layout_height="@dimen/dp44"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/click_f5f5f5_corner50_bt_bg"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="不需要翻倍"
                    android:textColor="@color/color_fe6a37"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>