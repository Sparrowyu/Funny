<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/RootLayout"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_mine_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/iv_top_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="129dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_top_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="129dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/home_top_bg" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/my_top_img_bg"
                    android:minHeight="129dp" />
            </RelativeLayout>

            <include
                android:id="@+id/user_common_top_rl"
                layout="@layout/layout_my_other_top_common_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_header_back"
                    style="@style/ivVideoBack"
                    android:layout_marginTop="@dimen/dp30" />

                <TextView
                    android:id="@+id/tv_feedback_other"
                    style="@style/my_feedback_title_tx"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp16" />

                <ImageView
                    android:id="@+id/iv_set_other_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp16"
                    android:src="@mipmap/mine_more"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="-10dp"
            android:paddingLeft="@dimen/dp20">

            <TextView
                android:id="@+id/mine_name"
                style="@style/Base333StandardText"
                android:gravity="center"
                android:text="name"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mine_tag_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_mine_tag_year"
                    style="@style/SmallTextBlack"
                    android:layout_marginLeft="@dimen/dp8"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp2"
                    android:text=""
                    android:textColor="@color/color_666666" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_attention"
                style="@style/StandardTextWhite"
                android:layout_width="@dimen/dp72"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp16"
                android:background="@drawable/shape_orange_bg_with_corner"
                android:gravity="center"
                android:text="关注" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_slogan"
            style="@style/Base333StandardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:maxLines="3"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp12"
            android:layout_marginTop="@dimen/dp12"
            android:background="@color/color_f5f5f5" />

    </LinearLayout>

</layout>
