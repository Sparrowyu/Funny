<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/RootLayout"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_mine_no_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_my_feedback_nologin"
                    style="@style/my_feedback_title_tx"
                    android:layout_toLeftOf="@+id/iv_set_no_more" />

                <ImageView
                    android:id="@+id/iv_set_no_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp16"
                    android:src="@mipmap/mine_more_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tx_to_login_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1"
                android:paddingLeft="@dimen/dp16"
                android:paddingBottom="@dimen/dp10">

                <TextView
                    android:id="@+id/tx_login_no_big"
                    style="@style/Base333StandardText"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="欢迎来到搞笑星球"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_login_no_small"
                    style="@style/BaseText"
                    android:layout_below="@+id/tx_login_no_big"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="每天笑出声10次，开心健康到极致。"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_to_login"
                    style="@style/MiddleTextWhite"
                    android:layout_width="@dimen/dp160"
                    android:layout_height="@dimen/dp44"
                    android:layout_below="@+id/tx_login_no_small"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@drawable/click_can_orange_bt_bg"
                    android:gravity="center"
                    android:text="登录/注册"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/dp110"
                    android:layout_height="102dp"
                    android:layout_alignBottom="@+id/tx_to_login"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp16"
                    android:src="@mipmap/mine_right_tip" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/color_f5f5f5" />

            <RelativeLayout
                android:id="@+id/no_login_rl_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp12">

                <RelativeLayout
                    android:id="@+id/rl_no_user_icon"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_no_icon"
                        style="@style/my_user_icon"
                        android:layout_width="74dp"
                        android:layout_height="74dp" />

                    <ImageView
                        android:id="@+id/iv_no_box_user_icon"
                        style="@style/my_user_icon_box"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp80"
                    android:layout_marginLeft="-20dp"
                    android:layout_toRightOf="@+id/rl_no_user_icon"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_user_no_mood_report"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_mood_report_count"
                            android:textColor="@color/color_FF632E"
                            style="@style/my_top_like_tx" />

                        <TextView
                            style="@style/SmallTextBlack"
                            android:text="笑出声"
                            android:textColor="@color/color_FF632E"
                            android:textSize="@dimen/standard_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:id="@+id/line_mood_report"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_d7d7d7"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/my_top_like_tx" />

                        <TextView
                            style="@style/SmallTextBlack"
                            android:text="获赞"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/standard_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_d7d7d7" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/my_top_like_tx" />

                        <TextView
                            style="@style/SmallTextBlack"
                            android:text="粉丝"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/standard_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_d7d7d7" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/my_top_like_tx" />

                        <TextView
                            style="@style/SmallTextBlack"
                            android:text="关注"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/standard_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp12"
                android:paddingLeft="@dimen/dp20">

                <TextView
                    android:id="@+id/tv_no_name"
                    style="@style/Base333StandardText"
                    android:gravity="center"
                    android:text="昵称"
                    android:textSize="@dimen/large_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/SmallTextBlack"
                        android:layout_marginLeft="@dimen/dp8"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/dp2"
                        android:textColor="@color/color_666666" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mine_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="129dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/iv_top_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="129dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_top_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="129dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/home_top_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/my_top_img_bg"
                        android:minHeight="129dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_my_feedback"
                    style="@style/my_feedback_title_tx"
                    android:layout_toLeftOf="@+id/iv_set_more" />

                <ImageView
                    android:id="@+id/iv_set_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp16"
                    android:src="@mipmap/mine_more" />
            </RelativeLayout>

            <include
                android:id="@+id/user_common_top_rl"
                layout="@layout/layout_my_other_top_common_view" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/name_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="-10dp"
            android:paddingLeft="@dimen/dp20"
            android:visibility="gone">

            <TextView
                android:id="@+id/mine_name"
                style="@style/Base333StandardText"
                android:gravity="center"
                android:text="昵称"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/mine_sex_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mine_tag_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_mine_tag_year"
                    style="@style/SmallTextBlack"
                    android:layout_marginLeft="@dimen/dp8"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingTop="@dimen/dp2"
                    android:text=""
                    android:textColor="@color/color_666666" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="@dimen/dp72"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp16"
                android:background="@drawable/click_d7d7d7_corner50_bt_bg"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_slogan"
            style="@style/Base333StandardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:maxLines="3"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/task_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16">

            <RelativeLayout
                android:id="@+id/mine_task_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mine_task_bt_bg1">

                <TextView
                    style="@style/Base333StandardText"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/central_task_mine_icon"
                    android:drawablePadding="@dimen/dp2"
                    android:gravity="center"
                    android:text="任务中心"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_task_central_red"
                    style="@style/my_task_red_img" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_store_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginRight="@dimen/dp8"
                android:layout_weight="1"
                android:background="@drawable/mine_task_bt_bg2">

                <TextView
                    style="@style/Base333StandardText"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/strore_funny_task_mine_icon"
                    android:drawablePadding="@dimen/dp2"
                    android:gravity="center"
                    android:text="搞笑商城"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_store_red"
                    style="@style/my_task_red_img" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_package_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mine_task_bt_bg3">

                <TextView
                    style="@style/Base333StandardText"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/package_task_mine_icon"
                    android:drawablePadding="@dimen/dp2"
                    android:gravity="center"
                    android:text="富豪榜"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_package_red"
                    style="@style/my_task_red_img"
                    android:layout_marginRight="@dimen/dp15" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp12"
            android:layout_marginTop="@dimen/dp12"
            android:background="@color/color_f5f5f5" />

    </LinearLayout>

</layout>
