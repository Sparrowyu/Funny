<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_like_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialog_like_img">
        <item name="android:layout_width">@dimen/dp60</item>
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/dp50</item>
        <item name="android:minWidth">@dimen/dp50</item>
    </style>

    <style name="dialog_like_tx">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
